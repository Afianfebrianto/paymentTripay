<%# backend-api/src/views/admin-generate-cash-code.ejs %>

<% locals.title = "Generate Kode Cash"; %>
<% locals.pageHeading = "Generate Kode Pembayaran Cash"; %>
<% locals.currentPath = "/admin/cash-codes/generate"; %>

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Buat Kode Pembayaran Cash Baru</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    Harga Sesi Tetap: <strong>Rp <span id="fixedPriceDisplay">30,000</span></strong>
                </div>
                <form id="generateCashCodeForm">
                    <div class="form-group">
                        <label for="cashVoucherCode">Kode Voucher (Opsional):</label>
                        <input type="text" class="form-control" id="cashVoucherCode" name="voucher_code" placeholder="Masukkan kode voucher jika ada">
                        <small id="voucherValidationMessage" class="form-text"></small>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block" id="generateCodeButton">
                        <i class="fas fa-cogs"></i> Generate Kode Pembayaran
                    </button>
                </form>

                <div id="generatedCodeResult" class="mt-4 alert alert-success" style="display:none;">
                    <h4>Kode Pembayaran Berhasil Dibuat!</h4>
                    <p class="mb-1">Kode: <strong id="displayGeneratedCode" style="font-size: 1.5em; letter-spacing: 1px;"></strong></p>
                    <p class="mb-1">Harga Awal: <span id="displayBaseAmountResult"></span></p>
                    <p class="mb-1" id="discountInfoResult" style="display:none;">Diskon Diterapkan: <span id="displayDiscountAppliedResult"></span> (<span id="displayVoucherMessageResult"></span>)</p>
                    <p class="font-weight-bold">Jumlah yang Harus Dibayar Pelanggan: <strong id="displayFinalAmountResult" style="font-size: 1.2em;"></strong></p>
                    <p class="mt-2"><small>Kode ini berlaku selama 24 jam.</small></p>
                </div>
                <div id="generateError" class="alert alert-danger mt-3" style="display:none;"></div>
            </div>
        </div>
    </div>
</div>

<%# Skrip khusus untuk halaman ini %>
<%
locals.page_custom_scripts = `
    <script src="/js/admin-generate-cash-code.js"></script> 
`;
%>
