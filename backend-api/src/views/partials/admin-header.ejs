<%# backend-api/src/views/partials/admin-header.ejs %>
<header style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #eee; padding-bottom: 10px; margin-bottom:20px;">
    <h2>Admin Panel - <%= title %></h2>
    <div>
        <% if (typeof user !== 'undefined' && user) { %>
            <span>Halo, <%= user.username %> (<%= user.role %>)</span>
            <button id="logoutButton" style="margin-left: 15px; padding: 5px 10px; cursor:pointer;">Logout</button>
        <% } %>
    </div>
</header>